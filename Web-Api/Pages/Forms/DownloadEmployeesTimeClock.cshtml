@page
@model Web_Api.Pages.Forms.DownloadEmployeesTimeClockModel

@{
    ViewData["Title"] = "Employees Time Clock";
}

<h1>Download Employees Time Clock</h1>
<form method="post" style="vertical-align: middle;margin-top: 10px">
    <div style="display: grid; grid-template-columns: max-content max-content ; padding: 5px">
        <label style="margin-right: 10px">From Date:</label>
        <input type="date" asp-for="FromDate" name="FromDate"/>
        <label style="margin-right: 10px">To Date:</label>
        <input type="date" asp-for="ToDate" name="ToDate"/>
    </div>
    <button type="submit" style="margin-top: 10px">Download</button>
</form>